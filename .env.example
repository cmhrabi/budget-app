# Next.js Configuration
NEXT_PUBLIC_APP_NAME="Budget App"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Configuration (for future backend integration)
NEXT_PUBLIC_API_URL="http://localhost:3001/api"
API_SECRET_KEY="your-secret-key-here"

# Database Configuration (for future use)
DATABASE_URL="postgresql://username:password@localhost:5432/budget_app"

# Banking API Configuration (for future use)
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-secret"
PLAID_ENV="sandbox"

# Open Banking API (for Canadian banks - future use)
OPEN_BANKING_CLIENT_ID="your-open-banking-client-id"
OPEN_BANKING_CLIENT_SECRET="your-open-banking-client-secret"
OPEN_BANKING_BASE_URL="https://api.openbanking.ca"

# Analytics and Monitoring (for future use)
NEXT_PUBLIC_ANALYTICS_ID="your-analytics-id"
SENTRY_DSN="your-sentry-dsn"

# Email Configuration (for future use)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"

# Feature Flags
NEXT_PUBLIC_ENABLE_BANK_INTEGRATION="false"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="false"